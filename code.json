    def generate_ai_command(
        self, user_request: str, username: str, model: str
    ) -> Dict[str, Any]:
        """Generate AI command"""

        # Handle casual/greeting messages intelligently
        casual_patterns = [
            "was geht",
            "wie geht's",
            "hello",
            "hi",
            "hey",
            "what's up",
            "how are you",
            "wie läuft's",
